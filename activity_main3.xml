<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/welcome2"
        android:layout_width="234dp"
        android:layout_height="352dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="48dp"
        android:contentDescription="@string/todo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/welcome2"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/hungerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="36dp"
        android:text="@string/Feed"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/cleanButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome2"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/cleanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="20dp"
        android:text="@string/Wash"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/happyButton"
        app:layout_constraintTop_toBottomOf="@+id/welcome2"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/happyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:text="@string/Health"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome2"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/txt_hunger_value"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginTop="108dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="text"
        android:text="@string/Feed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome2"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/txt_clean_value"
        android:layout_width="334dp"
        android:layout_height="48dp"
        android:layout_marginTop="96dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="text"
        android:text="@string/Wash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cleanButton"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/txt_happy"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="text"
        android:text="@string/Health"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_clean_value"
        tools:ignore="LabelFor" />

</androidx.constraintlayout.widget.ConstraintLayout>